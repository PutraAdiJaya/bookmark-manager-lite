{
  "name": "bookmark-manager-lite",
  "displayName": "bookmark-manager-lite",
  "description": "A lightweight bookmark manager extension for Visual Studio Code",
  "version": "0.0.1",
  "publisher": "PutraAdiJaya",
  "galleryBanner": {
    "color": "#667eea",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PutraAdiJaya/bookmark-manager-lite"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bookmark",
    "bookmarks",
    "navigation",
    "code-navigation",
    "productivity",
    "multi-color",
    "numbered",
    "tags",
    "organize",
    "code-organization",
    "markers",
    "code-markers",
    "quick-navigation",
    "workspace",
    "visual-indicators",
    "colored-icons",
    "tag-groups",
    "code-management",
    "developer-tools",
    "vscode-extension"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "bookmarkExplorer",
          "name": "Bookmark Putra"
        }
      ]
    },
    "commands": [
      {
        "command": "bookmarkLite.add",
        "title": "Bookmark.Putra: Add Bookmark",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.addWithTags",
        "title": "Bookmark.Putra: Add Bookmark with Tags",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.open",
        "title": "Bookmark.Putra: Open Bookmark",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.remove",
        "title": "Bookmark.Putra: Remove Bookmark",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.editTags",
        "title": "Bookmark.Putra: Edit Bookmark Tags",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.clearAll",
        "title": "Bookmark.Putra: Clear All Bookmarks",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.collapseAll",
        "title": "Bookmark.Putra: Collapse All Groups",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.expandAll",
        "title": "Bookmark.Putra: Expand All Groups",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.search",
        "title": "Bookmark.Putra: Search Bookmarks",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.searchTreeView",
        "title": "Bookmark.Putra: Search Tree View",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.export",
        "title": "Bookmark.Putra: Export Bookmarks",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.import",
        "title": "Bookmark.Putra: Import Bookmarks",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.validate",
        "title": "Bookmark.Putra: Validate Bookmarks",
        "category": "Bookmark"
      },
      {
        "command": "bookmarkLite.statistics",
        "title": "Bookmark.Putra: Show Statistics",
        "category": "Bookmark"
      }
    ],
    "keybindings": [
      {
        "command": "bookmarkLite.add",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkLite.addWithTags",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "bookmarkLite.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "bookmarkLite.searchTreeView",
          "when": "view == bookmarkExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bookmarkLite.open",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "navigation"
        },
        {
          "command": "bookmarkLite.editTags",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "edit@1"
        },
        {
          "command": "bookmarkLite.remove",
          "when": "view == bookmarkExplorer && viewItem == bookmark",
          "group": "edit@2"
        }
      ],
      "editor/context": [
        {
          "command": "bookmarkLite.add",
          "group": "bookmark@1",
          "when": "editorTextFocus"
        },
        {
          "command": "bookmarkLite.addWithTags",
          "group": "bookmark@2",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "bookmarkLite.search",
          "when": "editorTextFocus"
        },
        {
          "command": "bookmarkLite.searchTreeView",
          "when": "view == bookmarkExplorer"
        },
        {
          "command": "bookmarkLite.export",
          "when": "editorTextFocus"
        },
        {
          "command": "bookmarkLite.import",
          "when": "editorTextFocus"
        },
        {
          "command": "bookmarkLite.validate",
          "when": "editorTextFocus"
        },
        {
          "command": "bookmarkLite.statistics",
          "when": "editorTextFocus"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run check-types && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "vsce:package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.0.3",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.17.19",
    "eslint": "^8.57.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}